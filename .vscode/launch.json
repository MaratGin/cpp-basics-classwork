    "version": "0.2.0",
    "configurations": [
        

        {
            "type": "cmake",
            "request": "launch",
            "name": "CMake: Script debugging",
            "cmakeDebugType": "script",
            "scriptPath": "${workspaceFolder}/cmake/<...>.cmake"
        },
        {
            "type": "cmake",
            "request": "launch",
            "name": "CMake: Configure project",
            "cmakeDebugType": "configure",
            "clean": false,
            "configureAll": false
        },
        {
            "name": "(lldb) Подключить",
            "type": "cppdbg",
            "request": "attach",
            "program": "Введите имя программы, например: ${workspaceFolder}/a.out",
            "MIMode": "lldb"
        },
    {
        "name": "(lldb) Запустить",
        "type": "cppdbg",
        "request": "launch",
        "program": "Введите имя программы, например: ${workspaceFolder}/a.out",
        "args": [],
        "stopAtEntry": false,
        "cwd": "${fileDirname}",
        "environment": [],
        "externalConsole": false,
        "MIMode": "lldb"
    }
    ]
}